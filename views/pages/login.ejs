<div class="container h-100" style="margin-top: 100px;">
  <div class=" row h-100 justify-content-center align-items-center">
    <div class="card" style="width: 350px;">
      <div class="card-header" style="text-align: center;">
        Log in
      </div>
      <div class="card-body">
        <% if(typeof errorMessage!= "undefined" && errorMessage){%>
        <span class="text-danger">Invalid credentials</span>
        <%}%>
        <form action="/order/auth/login" method="POST">
          <div class="form-group">
            <label for="email">Email address</label>
            <input required type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp"
              placeholder="Enter email">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input required type="password" class="form-control" id="password" name="password" placeholder="Password">
          </div>

          <input type="number" hidden name="orderQty" class="form-control" value="<%= order.orderQty %>">
          <input type="text" hidden name="sellerId" class="form-control" value="<%= order.sellerId %>">
        <input type="text" hidden name="productId" class="form-control" value="<%= order.productId %>">
        <input type="text" hidden name="orderTotal" class="form-control" value="<%= order.orderTotal %>">
        <button type="submit" class=" btn-block btn btn-dark">Login</button>
        </form>
      </div>
    </div>
  </div>
</div>